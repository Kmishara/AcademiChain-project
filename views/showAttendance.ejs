<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Records</title>
    <link rel="stylesheet" href="/css/showAttendance.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <header class="header">
        <h6>Academic Chain</h6>
        <div class="menu-icon" onclick="toggleMenu()">
            <i class="fas fa-bars"></i>
        </div>
        <nav class="nav-links">
            <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/attendance"><i class="fas fa-calendar-check"></i> Attendance</a>
            <a href="/show-attendance"><i class="fas fa-list"></i> Show Attendance</a>
            <a href="/Addfilter"><i class="ri-layout-column-line"></i>Filter Column</a>
            <a href="/Profile"><i class="fas fa-user"></i> Update Profile</a>
            <a href="/feed"><i class="fas fa-info-circle"></i> Details</a>
            <a href="/filter"><i class="fas fa-filter"></i> Filter</a>
            <a href="/logout"><i class="fa-solid fa-right-from-bracket"></i>          Logout</a>
        </nav>
    </header>
    <h1>Attendance Records</h1>

    <% if (attendanceRecords.length === 0) { %>
        <p>No attendance records found.</p>
    <% } else { %>
        <% attendanceRecords.forEach(record => { %>
            <div class="attendance-record">
                <h2>Course: <%= record.course %></h2>
                <p>Date: <%= new Date(record.date).toLocaleDateString() %></p>
                <h3>Students:</h3>
                <ul>
                    <% record.students.sort((a, b) => a.enroll.localeCompare(b.enroll)).forEach((student, index) => { %>
                        <li>
                            <strong><%= index + 1 %>. <%= student.enroll %></strong>: <%= student.status %>
                        </li>
                    <% }); %>
                </ul>
                
                <hr>
            </div>
        <% }); %>
    <% } %>

    <script>
        function toggleMenu() {
            document.querySelector(".nav-links").classList.toggle("active");
        }
    </script>

</body>
</html>
